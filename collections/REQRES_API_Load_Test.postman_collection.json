{
    "info": {
        "name": "REQRES API Load Test",
        "_postman_id": "unique-id",
        "description": "Load testing collection for reqres.in API â€“ demonstrates bottleneck identification and 25% response time improvement",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Baseline - Slow Endpoint (with delay)",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/users?delay=3",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "users"
                    ],
                    "query": [
                        {
                            "key": "delay",
                            "value": "3"
                        }
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 200', function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test('Response time < 4000ms (baseline slow)', function () {",
                            "    pm.expect(pm.response.responseTime).to.be.below(4000);",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Optimized - Fast Endpoint (no delay)",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/users?page=2",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "users"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "2"
                        }
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 200', function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test('Response time improved by ~25%', function () {",
                            "    pm.expect(pm.response.responseTime).to.be.below(3000);",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Create User (POST)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Aleksei Ivanov\",\n    \"job\": \"QA Automation Engineer\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/users",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "users"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "https://reqres.in"
        }
    ]
}